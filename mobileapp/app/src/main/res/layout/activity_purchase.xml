<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginTop="80dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnBackToShop"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvInvoiceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvInvoiceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tvInvoiceDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thank you for your order! Below are the details of your purchase."
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvBillingAddressHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Billing Address"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvBillingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_nome"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvBillingEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_email"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvBillingAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_morada"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvBillingPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_telefone"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvBillingNif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_nif"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvOrderSummaryHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <ListView
                android:id="@+id/lvLinhasFatura"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/tvPaymentMethodHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Method"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_metodo_de_pagamento"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvGrandTotalHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grand Total"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvInvoiceTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/gl_green"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBackToShop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back to Shop"
        android:backgroundTint="@color/gl_green"
        android:textColor="@color/white"
        android:padding="16dp" />
</RelativeLayout>
